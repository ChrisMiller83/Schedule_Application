<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" style="-fx-background-color: teal;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.scheduleAppointmentController">
    <children>
        <Label layoutX="203.0" layoutY="27.0" text="Schedule Appointment">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label layoutX="25.0" layoutY="75.0" text="Appointment ID">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="appointIdTF" editable="false" layoutX="150.0" layoutY="70.0" prefHeight="25.0" prefWidth="402.0" promptText="Auto-Generated" />
        <Label layoutX="25.0" layoutY="125.0" text="Customer ID">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="customerIdChoiceBox" layoutX="150.0" layoutY="120.0" prefWidth="150.0" />
        <Label layoutX="25.0" layoutY="175.0" text="User">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="userChoiceBox" layoutX="150.0" layoutY="170.0" prefWidth="150.0" />
        <Label layoutX="25.0" layoutY="225.0" text="Title">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="titleTF" layoutX="150.0" layoutY="220.0" prefHeight="25.0" prefWidth="402.0" promptText="Enter Title" />
        <Label layoutX="25.0" layoutY="275.0" text="Description">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="descriptionTF" layoutX="150.0" layoutY="270.0" prefHeight="25.0" prefWidth="402.0" promptText="Enter Description" />
        <Label layoutX="25.0" layoutY="325.0" text="Location">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <TextField fx:id="locationTF" layoutX="150.0" layoutY="320.0" prefHeight="25.0" prefWidth="402.0" promptText="Enter Location" />
        <Label layoutX="25.0" layoutY="375.0" text="Contact">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="contactChoiceBox" layoutX="150.0" layoutY="370.0" prefWidth="150.0" />
        <Label layoutX="25.0" layoutY="425.0" text="Type">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="typeChoiceBox" layoutX="150.0" layoutY="422.0" prefWidth="150.0" />
        <Label layoutX="25.0" layoutY="475.0" text="Date">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <DatePicker fx:id="datePicker" layoutX="150.0" layoutY="470.0" promptText="Select a date" />
        <Label layoutX="25.0" layoutY="525.0" text="Start Time">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="startTimeChoiceBox" layoutX="150.0" layoutY="520.0" prefWidth="150.0" />
        <Label layoutX="22.0" layoutY="575.0" text="End Time">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="endTimeChoiceBox" layoutX="150.0" layoutY="570.0" prefWidth="150.0" />
        <Button fx:id="cancelBtn" layoutX="200.0" layoutY="625.0" mnemonicParsing="false" onAction="#cancelToAppointments" text="Cancel" />
        <Button fx:id="saveBtn" layoutX="300.0" layoutY="625.0" mnemonicParsing="false" onAction="#saveAppointment" text="Save" />
    </children>
</AnchorPane>
