<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane style="-fx-background-color: Teal;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddContactController">
   <children>
      <HBox alignment="CENTER" layoutX="-6.0" prefHeight="50.0" prefWidth="600.0">
         <children>
            <Label text="Add Contact" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" layoutY="50.0" prefHeight="50.0" prefWidth="614.0" spacing="50.0">
         <children>
            <Label prefWidth="100.0" text="Contact ID" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="contactIdTF" editable="false" promptText="Auto-Generated" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" layoutY="100.0" prefHeight="50.0" prefWidth="614.0" spacing="50.0">
         <children>
            <Label prefWidth="100.0" text="Contact Name" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="contactNameTF" promptText="Contact Name" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" layoutY="150.0" prefHeight="50.0" prefWidth="614.0" spacing="50.0">
         <children>
            <Label prefWidth="100.0" text="Email" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="emailTF" promptText="name@email.com" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" layoutY="200.0" prefHeight="100.0" prefWidth="614.0" spacing="50.0">
         <children>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#cancelToContactsView" prefWidth="75.0" style="-fx-background-color: RED; -fx-border-color: SILVER;" text="Cancel" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveContact" prefWidth="75.0" style="-fx-background-color: GREEN; -fx-border-color: SILVER;" text="Save" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
