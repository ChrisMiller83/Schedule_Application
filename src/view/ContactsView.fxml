<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: TEAL;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ContactsController">
   <children>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0">
         <children>
            <Label text="Contacts" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <TableView fx:id="contactsTable" layoutX="75.0" layoutY="110.0" prefHeight="200.0" prefWidth="436.0">
        <columns>
          <TableColumn fx:id="contactIdCol" prefWidth="75.0" text="Contact Id" />
          <TableColumn fx:id="contactNameCol" prefWidth="117.0" text="Contact Name" />
            <TableColumn fx:id="emailCol" prefWidth="141.0" text="Email" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="40.0" prefWidth="500.0" spacing="20.0">
         <children>
          <Button fx:id="addContactBtn" mnemonicParsing="false" onAction="#toAddContacts" prefWidth="120.0" style="-fx-background-color: GREEN;" text="Add Contact" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="updateContactBtn" mnemonicParsing="false" onAction="#toUpdateContacts" prefWidth="120.0" style="-fx-background-color: PURPLE;" text="Update Contact" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="deleteContactBtn" mnemonicParsing="false" onAction="#deleteContact" prefWidth="120.0" style="-fx-background-color: RED;" text="Delete Contact" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Button fx:id="mainMenuBtn" layoutX="250.0" layoutY="325.0" mnemonicParsing="false" onAction="#toMainMenu" style="-fx-background-color: ORANGE;" text="Main Menu" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
